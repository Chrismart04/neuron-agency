root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown
[*.md]
trim_trailing_whitespace = false

# JSON
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

# TypeScript y JavaScript
[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

# CSS
[*.css]
indent_style = space
indent_size = 2

# Makefiles (usa tab)
[Makefile]
indent_style = tab
tab_width = 4

# YAML
[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2